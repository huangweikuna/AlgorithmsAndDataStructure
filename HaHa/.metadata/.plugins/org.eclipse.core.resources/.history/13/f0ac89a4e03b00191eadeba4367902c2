package recursion;

/*
 * 112. Path Sum
 * 
 * 
 * 
 * Given the below binary tree and sum = 22,
	      5
	     / \
	    4   8
	   /   / \
	  11  13  4
	 /  \      \
	7    2      1
 */
public class LeetCode112 {
	public int maxDepth(TreeNode root) {
		if(root == null)
			return 0;
		return Math.max(maxDepth(root.left), maxDepth(root.right)) + 1;
	}
}